{
  "private": true,
  "name": "beemo-root",
  "scripts": {
    "test": "yarn run jest",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint ./packages/*/{src,tests}",
    "flow": "beemo flow --workspaces",
    "jest": "beemo jest --workspaces",
    "prettier": "beemo prettier --write ./README.md \"./configs/*.js\" \"./packages/*/{bin,src,tests}/**/*.js\" \"./packages/*/*.{md,json}\" \"./docs/**/*.md\"",
    "package": "yarn run clean && yarn run bootstrap && yarn run build && yarn test",
    "bootstrap": "lerna bootstrap",
    "bootstrap:slow": "yarn run bootstrap --concurrency=1",
    "build": "find ./packages/* -prune -type d -exec babel {}/src --out-dir {}/lib \\;",
    "clean": "rimraf ./packages/*/{lib,esm}/ && lerna clean --yes",
    "release": "lerna publish",
    "release:force": "yarn run release --force-publish=*",
    "prerelease": "yarn run package",
    "docs": "gitbook build --log=debug --debug",
    "docs:serve": "gitbook serve",
    "docs:install": "gitbook install"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "0.65.0",
    "lerna": "^2.9.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@local",
    "drivers": [
      "babel",
      {
        "driver": "eslint",
        "args": [
          "--color",
          "--report-unused-disable-directives"
        ]
      },
      {
        "driver": "flow",
        "args": [
          "--color=auto"
        ]
      },
      {
        "driver": "jest",
        "args": [
          "--colors",
          "--logHeapUsage"
        ]
      },
      "mocha",
      {
        "driver": "prettier",
        "args": [
          "--debug-check",
          "--write"
        ]
      },
      "typescript"
    ],
    "eslint": {
      "rules": {
        "import/first": "off"
      }
    },
    "flow": {
      "ignore": [
        ".*/packages/driver-flow/integration/.*"
      ],
      "libs": [
        "./packages/core/beemo.js.flow",
        "./node_modules/boost/boost.js.flow",
        "./node_modules/optimal/optimal.js.flow"
      ],
      "lints": {
        "all": "off"
      }
    }
  }
}
