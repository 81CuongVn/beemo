{
  "private": true,
  "name": "beemo-root",
  "scripts": {
    "setup": "bash ./scripts/build-packages.sh",
    "build": "beemo typescript --workspaces=*",
    "coverage": "yarn run jest --coverage",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "posttest": "yarn run eslint",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "test:int:fail": "beemo run-script run-integration-tests --fail",
    "test:int:pass": "beemo run-script run-integration-tests --pass",
    "prettier": "beemo prettier",
    "prerelease": "yarn test && yarn run build",
    "release": "lerna publish",
    "release:bump": "beemo run-script bump-peer-deps",
    "type": "beemo typescript --workspaces=* --noEmit"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "0.124.1",
    "chalk": "^2.4.1",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.3",
    "lerna": "3.4.3",
    "semver": "^5.6.0"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@local",
    "drivers": [
      "babel",
      "eslint",
      "jest",
      "mocha",
      "prettier",
      "typescript",
      "webpack"
    ],
    "settings": {
      "node": true
    },
    "eslint": {
      "rules": {
        "function-paren-newline": "off",
        "no-param-reassign": "off",
        "import/first": "off"
      }
    },
    "jest": {
      "testPathIgnorePatterns": [
        "node_modules",
        "integration"
      ]
    }
  }
}
