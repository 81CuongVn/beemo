{
  "name": "rocket",
  "version": "0.0.0",
  "description": "Manage all build tool configurations in a single reusable repository.",
  "main": "index.js",
  "scripts": {
    "test": "yarn run jest",
    "coverage": "run-coverage",
    "eslint": "run-linter ./src ./tests ./packages/*/{src,tests}",
    "flow": "type-check",
    "jest": "run-tests",
    "posttest": "yarn run flow",
    "pretest": "yarn run eslint",
    "assemble": "yarn run clean && yarn run bootstrap && yarn run build && yarn test",
    "bootstrap": "lerna bootstrap --hoist",
    "bootstrap:slow": "yarn run bootstrap --concurrency=1",
    "build": "lerna run build",
    "clean": "rimraf ./packages/{*}/lib/ && lerna clean --yes",
    "publish": "lerna publish",
    "publish:force": "lerna publish --force-publish=*",
    "updated": "lerna updated"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milesj/rocket.git"
  },
  "keywords": [
    "rocket",
    "build",
    "tool",
    "config",
    "manager",
    "babel",
    "eslint",
    "jest"
  ],
  "author": "Miles Johnson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/milesj/rocket/issues"
  },
  "homepage": "https://github.com/milesj/rocket#readme",
  "devDependencies": {
    "@milesj/build-tool-config": "0.35.0",
    "lerna": "^2.4.0"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "babel": {
    "extends": "./node_modules/@milesj/build-tool-config/babel.json5"
  },
  "eslintConfig": {
    "extends": "./node_modules/@milesj/build-tool-config/eslint.json5"
  },
  "eslintIgnore": [
    "lib/",
    "*.min.js",
    "*.map"
  ],
  "jest": {
    "preset": "@milesj/build-tool-config"
  }
}