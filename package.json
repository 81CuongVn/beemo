{
  "private": true,
  "scripts": {
    "test": "yarn run jest",
    "coverage": "run-coverage",
    "eslint": "run-linter ./src ./tests ./packages/*/{src,tests}",
    "flow": "type-check",
    "jest": "run-tests",
    "posttest": "yarn run flow",
    "pretest": "yarn run eslint",
    "assemble": "yarn run clean && yarn run bootstrap && yarn run build && yarn test",
    "bootstrap": "lerna bootstrap --hoist",
    "bootstrap:slow": "yarn run bootstrap --concurrency=1",
    "build": "lerna run build",
    "clean": "rimraf ./packages/{*}/lib/ && lerna clean --yes",
    "publish": "lerna publish",
    "publish:force": "lerna publish --force-publish=*",
    "updated": "lerna updated"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "0.35.0",
    "lerna": "^2.5.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "babel": {
    "extends": "./node_modules/@milesj/build-tool-config/babel.node.json5"
  },
  "eslintConfig": {
    "extends": "./node_modules/@milesj/build-tool-config/eslint.node.json5"
  },
  "eslintIgnore": [
    "lib/",
    "*.min.js",
    "*.map"
  ],
  "jest": {
    "preset": "@milesj/build-tool-config"
  }
}
