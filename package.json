{
  "private": true,
  "name": "beemo",
  "version": "0.0.0",
  "scripts": {
    "test": "yarn run jest",
    "coverage": "run-coverage",
    "docs": "cp ./README.md ./packages/core/README.md",
    "eslint": "run-linter ./src ./tests ./packages/*/{src,tests}",
    "flow": "yarn run beemo flow check",
    "jest": "run-tests",
    "assemble": "yarn run clean && yarn run bootstrap && yarn run build && yarn test",
    "bootstrap": "lerna bootstrap",
    "bootstrap:slow": "yarn run bootstrap --concurrency=1",
    "build": "lerna run build",
    "clean": "rimraf ./packages/{*}/lib/ && lerna clean --yes",
    "publish": "yarn run prerelease && lerna publish",
    "publish:force": "yarn run prerelease && lerna publish --force-publish=*",
    "prerelease": "yarn run docs && yarn run assemble",
    "updated": "lerna updated",
    "beemo": "beemo"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "0.50.0",
    "lerna": "^2.8.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*"
  ],
  "babel": {
    "presets": "@milesj/build-tool-config/babel"
  },
  "eslintConfig": {
    "extends": "./node_modules/@milesj/build-tool-config/eslint.js"
  },
  "eslintIgnore": [
    "esm/",
    "lib/",
    "*.min.js",
    "*.map"
  ],
  "beemo": {
    "config": "@local",
    "drivers": [
      "babel",
      {
        "driver": "eslint",
        "args": ["--color", "--report-unused-disable-directives"]
      },
      {
        "driver": "flow",
        "args": ["--color=auto"]
      },
      {
        "driver": "jest",
        "args": ["--colors", "--logHeapUsage"]
      },
      "mocha",
      {
        "driver": "prettier",
        "args": ["--debug-check", "--write"]
      }
    ],
    "eslint": {
      "rules": {
        "import/first": "off"
      }
    },
    "execute": {
      "cleanup": true
    }
  }
}
