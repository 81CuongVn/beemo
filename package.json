{
  "private": true,
  "name": "beemo-root",
  "scripts": {
    "setup": "bash ./scripts/build-packages.sh",
    "build": "beemo typescript --workspaces=* --priority",
    "coverage": "yarn run jest --coverage",
    "docs": "gitbook build --debug --log=debug",
    "docs:serve": "gitbook serve",
    "docs:install": "gitbook install",
    "eslint": "beemo eslint",
    "jest": "beemo jest",
    "posttest": "yarn run eslint",
    "pretest": "yarn run type",
    "test": "yarn run jest",
    "prettier": "beemo prettier",
    "prerelease": "yarn test && yarn run build",
    "release": "lerna publish",
    "type": "beemo typescript --workspaces=* --noEmit"
  },
  "devDependencies": {
    "@milesj/build-tool-config": "0.108.3",
    "chalk": "^2.4.1",
    "fs-extra": "^6.0.1",
    "glob": "^7.1.2",
    "lerna": "3.0.0-beta.21",
    "semver": "^5.5.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "workspaces": [
    "packages/*"
  ],
  "beemo": {
    "module": "@local",
    "drivers": [
      "babel",
      "eslint",
      {
        "driver": "jest",
        "env": {
          "NODE_ENV": "test"
        }
      },
      "mocha",
      "prettier",
      "typescript"
    ],
    "eslint": {
      "rules": {
        "function-paren-newline": "off",
        "no-param-reassign": "off",
        "import/first": "off"
      }
    }
  }
}
